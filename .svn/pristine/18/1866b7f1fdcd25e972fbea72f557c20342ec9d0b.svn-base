<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lLmain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@color/color_about_activity">
    
	<com.danh32.fontify.TextView android:id="@+id/TvAboutTitle"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	   android:text="@string/about_title"
	   android:textSize="25sp"
       style="@style/YekanFont"
	   android:gravity="center"
       android:textColor="@color/activity_about_color_text"/>
	
	<com.danh32.fontify.TextView  android:id="@+id/TvVersionNumber"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:textSize="20sp"
	    android:gravity="center"
        style="@style/YekanFont"
	    android:layout_marginTop="5dp"
        android:textColor="@color/activity_about_color_text"/>

    <View
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_mevelopers_white"/>
	
	<com.danh32.fontify.TextView android:id="@+id/TvWebsiteAddress"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:text="@string/website_address"
	    android:autoLink="web"
        android:textColorLink="@color/activity_about_color_text"/>
    
</LinearLayout>
