<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_main_activity">

    <com.danh32.fontify.EditText
        android:id="@+id/TeNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textDirection="ltr"
        android:inputType="number"
        android:digits="0123456789,"
        style="@style/YekanFont"
        android:textColor="@color/color_text"
        android:imeOptions="actionDone"
         >
        <requestFocus />
    </com.danh32.fontify.EditText>

    <com.danh32.fontify.Button android:id="@+id/BtnConvert"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnConvertText"
        android:textDirection="rtl"
        style="@style/YekanFont"
        android:textColor="@color/color_text"/>

    <com.danh32.fontify.TextView android:id="@+id/TvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textDirection="rtl"
        style="@style/YekanFont"
        android:textColor="@color/color_text"/>

</LinearLayout>
