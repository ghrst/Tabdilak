<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.danh32.fontify.EditText
        android:id="@+id/TeNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textDirection="ltr"
        android:inputType="number"
        android:digits="0123456789,"
        style="@style/YekanFont"
         >
        <requestFocus />
    </com.danh32.fontify.EditText>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >

                <com.danh32.fontify.RadioButton android:id="@+id/RbRials"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.70"
                    android:text="@string/RbRial"
                    android:gravity="right"
                    android:button="@null"
                    android:drawableRight="@android:drawable/btn_radio"
                    android:drawablePadding="20dp"
                    android:textSize="20dp"
                    style="@style/YekanFont"

                    />

                <com.danh32.fontify.RadioButton android:id="@+id/RbTooman"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.30"
                    android:text="@string/RbTooman"
                    android:gravity="right"
                    android:button="@null"
                    android:drawableRight="@android:drawable/btn_radio"
                    android:drawablePadding="20dp"
                    android:textSize="20dp"
                    style="@style/YekanFont"
                    />

         </RadioGroup>

    <com.danh32.fontify.Button android:id="@+id/BtnConvert"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnConvertText"
        android:textDirection="rtl"
        style="@style/YekanFont"/>

    <com.danh32.fontify.TextView android:id="@+id/TvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textDirection="rtl"
        style="@style/YekanFont"/>

</LinearLayout>
